@using PagedList.Mvc
@model PagedList.IPagedList<NavaTraining.Models.ResultItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-info">
    <div class="panel-heading">
        <i class="icon icon-2x icon-list" style="margin-left: 10px;"></i><label style="font-size: 17px;">لیست آیتم های مصاحبه</label>

    </div>

    <div class="panel-body">
        <p>
            @Html.ActionLink("اضافه کردن آیتم", "Create", null, new { @class = "button button-3d button-small button-rounded button-rounded" })
        </p>
        <div class="table-responsive">
            <table class="table table-bordered table-condensed table-responsive table-striped">

                <tr class="success center">
                    <th>
                        @Html.DisplayNameFor(model => model.First().ValueItem)
                    </th>
                    <th>عملیات</th>
                </tr>

                @foreach (var item in Model)
                {
                <tr class="text-center">
                    <td>
                        @Html.DisplayFor(modelItem => item.ValueItem)
                    </td>
                    <td>
                        @Html.ActionLink("ویرایش", "Edit", new { id = item.ItemID }, new { @class = "button button-3d button-small button-yellow button-light" }) |

                        @Html.ActionLink("حذف از لیست", "Delete", new { id = item.ItemID }, new { @class = "button button-3d button-small button-rounded button-red" })
                    </td>
                </tr>
                }

            </table>
        </div>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>
