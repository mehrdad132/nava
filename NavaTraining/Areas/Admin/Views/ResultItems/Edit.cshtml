@model NavaTraining.Models.ResultItem

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="table-responsive">
    <div class="panel panel-info">
        <div class="panel-heading">
            <i class="icon icon-2x icon-list" style="margin-left: 10px;"></i><label style="font-size: 17px;">ویرایش آیتم</label>

        </div>

        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ItemID)

                    <div class="form-group">
                        @Html.LabelFor(model => model.ValueItem, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ValueItem, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ValueItem, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="ویرایش" class="button button-3d button-small button-yellow button-light" />
                        </div>
                    </div>
                </div>
            }

            <div>
                <input type="submit" value="ویرایش" class="button button-3d button-small button-yellow button-light" />
            </div>
        </div>
    </div>
</div>
